<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            tools:text="2018年05月04日" />

        <TextView
            android:id="@+id/change_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="切换"
            android:textSize="22sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鸡蛋"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/egg_left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/egg_left"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/egg_loss_tv"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/unselected"
            android:gravity="center"
            android:text="@string/egg_loss" />

        <TextView
            android:id="@+id/egg_reset"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/selected"
            android:gravity="center"
            android:text="重置" />

        <EditText
            android:id="@+id/egg_reset_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="数量" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酸奶"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/yogurt_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/egg_left"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/yogurt_loss_tv"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/unselected"
            android:gravity="center"
            android:text="@string/egg_loss" />

        <TextView
            android:id="@+id/reset_yogurt"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/selected"
            android:gravity="center"
            android:text="重置" />

        <EditText
            android:id="@+id/yogurt_reset_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="数量" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/go_to_bed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/clicked"
            android:padding="5dp"
            android:text="入睡" />


        <Button
            android:id="@+id/wake_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/clicked"
            android:padding="5dp"
            android:text="起床" />

    </LinearLayout>


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/sleep_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>